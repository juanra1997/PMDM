<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bSoundPool"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:onClick="soundpoolclick"
        android:text="SoundPool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bMediaPlayer"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:onClick="audioMediaPlayerClick"
        android:text="MediaPlayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bSoundPool" />
</android.support.constraint.ConstraintLayout>